<%- include('header') %>

<!-- 설정 페이지 (카테고리별 키워드) | 버전: 2.0.0 | 수정일: 2026-02-09 -->
<div class="max-w-2xl mx-auto">
  <h2 class="text-lg font-bold text-gray-800 mb-4">카테고리별 키워드 설정</h2>
  <p class="text-sm text-gray-500 mb-6">각 카테고리의 큐레이션에 사용할 키워드를 관리합니다.</p>

  <% Object.keys(categories).forEach(function(catId) { %>
  <div class="mb-8 p-4 bg-white rounded-xl border">
    <h3 class="text-md font-semibold text-gray-700 mb-3"><%= categories[catId].label %></h3>

    <!-- 키워드 입력 -->
    <div class="flex gap-2 mb-3">
      <input id="keywordInput-<%= catId %>" type="text" placeholder="키워드 입력 후 Enter"
        class="flex-1 border border-gray-300 rounded-lg px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      <button onclick="addKeyword('<%= catId %>')" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition">추가</button>
    </div>

    <!-- 키워드 태그 목록 -->
    <div id="keywordTags-<%= catId %>" class="flex flex-wrap gap-2 mb-4">
      <% categories[catId].keywords.forEach(function(kw) { %>
      <span class="keyword-tag inline-flex items-center gap-1 bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm" data-keyword="<%= kw %>">
        <%= kw %>
        <button onclick="removeKeyword(this)" class="ml-1 text-blue-500 hover:text-red-500 font-bold">&times;</button>
      </span>
      <% }); %>
    </div>

    <!-- 저장 버튼 및 상태 메시지 -->
    <div class="flex items-center gap-4">
      <button onclick="saveKeywords('<%= catId %>')"
        class="bg-green-600 text-white px-6 py-2 rounded-lg text-sm font-medium hover:bg-green-700 transition">저장</button>
      <span id="saveStatus-<%= catId %>" class="text-sm"></span>
    </div>
  </div>
  <% }); %>
</div>

<%- include('footer') %>
